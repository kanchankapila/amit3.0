{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "noUnusedLocals": true
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": true,
    "enableIvy": true,
    "cache": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/**/*.ts"
  ]
}
